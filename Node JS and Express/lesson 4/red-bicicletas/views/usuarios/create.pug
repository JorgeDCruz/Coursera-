extends ../layout

block content
    a(href='/usuarios') Volver 
    
    br
    br 
    br

    h1 Nuevo Usuario 

    br
    br

    form(action='/usuarios/create' method='post')
        .formgroup
            label(for='nombre') Nombre:
            input#nombre.form-controll(type='text' name='nombre' value= usuario.nombre class=errors.nombre ? 'is-invalid' : '')
            if errors.nombre
                small#nombreHelp.text-danger 
                    = errors.nombre.message
        .formgroup
            label(for='email') Email:
            input#email.form-controll(type='text' name='email' value= usuario.email class=errors.email ? 'is-invalid' : '')
            if errors.email
                small#emailHelp.text-danger 
                    = errors.email.message
        .formgroup
            label(for='pwd') Password:
            input#pwd.form-controll(type='password' name='password' class=errors.password ? 'is-invalid' : '')
            if errors.password
                small#passwordHelp.text-danger 
                    = errors.password.message
        .formgroup
            label(for='confirm_pwd') Confirmar Password:
            input#confirm_pwd.form-controll(type='password' name='confirm_password' class=errors.confirm_password ? 'is-invalid' : '')
            if errors.confirm_password
                small#confirm_passwordHelp.text-danger 
                    = errors.confirm_password.message
        br
        br
        input.btn.btn-primary(type='submit' value='ok')
        
        
        