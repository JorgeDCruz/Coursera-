extends ../layout

block content
    h1 Listado de Bicicletas
    table.table
        thead 
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Precio
                th(scope='col')
                th(scope='col')

        tbody 
            each bici in bicis
                tr 
                td(scope='row') 
                    = bici.id 
                td= bici.color
                td= bici.modelo
                td= bici.ubicacion
                td
                    a(href=`bicicletas/${bici.id}/update` class="btn btn-primary") Editar
                td 
                    form.inline(method="post" action=`bicicletas/${bici.id}/delete`)
                        input(type="hidden" name="id" value=bici.id)
                        button.link-button(type="submit" name="submit_param" value="submit_value" class="btn btn-danger")
                            = 'Eliminar'
    br
    a(href="/bicicletas/create") Crear
    br
    br
    a(href="/") Volver